#ifndef BEMBEL_DUFFYTRICK_MODULE_
#define BEMBEL_DUFFYTRICK_MODULE_

/**
 *  \defgroup DuffyTrick DuffyTrick
 *  \brief The DuffyTrick module provides quadrature routines for (nearly)
 * singular integrals.
 *
 * Therein, the implementation is ssentially an adaptation of the so-called
 * Sauter-Schwab quadrature rules
 **/

#include <cassert>
#include <Eigen/Dense>

#include "AnsatzSpace"
#include "ClusterTree"
#include "Quadrature"

#include "src/util/Macros.hpp"
#include "src/util/Constants.hpp"

#include "src/LinearOperator/LinearOperatorBase.hpp"

#include "src/DuffyTrick/compareElements.hpp"
#include "src/DuffyTrick/farFieldQuadratureNodes.hpp"
#include "src/DuffyTrick/tau.hpp"
#include "src/DuffyTrick/integrate0.hpp"
#include "src/DuffyTrick/integrate1.hpp"
#include "src/DuffyTrick/integrate2.hpp"
#include "src/DuffyTrick/integrate3.hpp"
#include "src/DuffyTrick/integrate4.hpp"
#include "src/DuffyTrick/evaluateBilinearForm.hpp"

#endif  // BEMBEL_DUFFYTRICK_MODULE_
